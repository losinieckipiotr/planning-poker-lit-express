{
  "name": "planning-poker-lit-express",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "watch": "npm-run-all -p frontend:watch server:watch",
    "build": "npm-run-all frontend:tsc server:tsc frontend:build",
    "preview": "npm-run-all build server:prod",
    "frontend:tsc": "tsc",
    "frontend:build": "vite build",
    "frontend:watch": "vite dev",
    "server:start": "node --experimental-strip-types --env-file=.env src/backend/index.ts",
    "server:watch": "node --watch --experimental-strip-types --env-file=.env src/backend/index.ts",
    "server:prod": "node --watch --experimental-strip-types --env-file=.env.production src/backend/index.ts",
    "server:tsc": "tsc -p src/backend/tsconfig.json",
    "server:test": "node --experimental-strip-types src/backend/client.ts",
    "server:test:drizzle": "node --experimental-strip-types --env-file=.env src/backend/drizzle-test.ts",
    "prettier": "prettier ./src --write",
    "drizzle:push": "drizzle-kit push",
    "spawn-test": "node --experimental-strip-types spawn-test.ts"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "lit": "^3.3.1",
    "morgan": "^1.10.1",
    "sqlite3": "^5.1.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.11",
    "@tailwindcss/vite": "4.1.12",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.4",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "tailwindcss": "4.1.12",
    "typescript": "5.9.2",
    "vite": "7.1.2"
  }
}
